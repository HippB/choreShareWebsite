pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test') {
            steps {
                sh 'cd ChoreShareMongoDB && pip install -r requirements.txt && pytest'
            }
        }

        stage('Deploy') {
            steps {
                sh 'cd ChoreShareMongoDB && pip install -r requirements.txt && python app.py'
            }
        }
    }

    post {
        always {
            deleteDir()
        }
    }
}
